<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.art4muslim.zedalmouhajer.fragments.CommunicateWithAssociationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/linear_for_ass">

            <View
                android:layout_width="5dp"
                android:layout_height="20dp"
                android:background="@color/colorAccent"></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_title"
                android:textStyle="bold"

                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_marginStart="10dp"
                android:textSize="18dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/call"
                android:drawableStart="@mipmap/call"
                android:drawablePadding="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="@string/txt_phone"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_phone"
                android:textStyle="bold"

                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/msg"
                android:drawableStart="@mipmap/msg"
                android:drawablePadding="10dp"

                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="@string/txt_email"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_email"
                android:textStyle="bold"

                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="22dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gplus"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/img_gplus"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/youtube"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/img_youtube"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/insta"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/img_insta"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/twitter"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/img_twitter"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fcb"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/img_fcb"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"

            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout4">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:hint="@string/text_fname"
                android:background="@drawable/round_rect_shape"
                android:inputType="text"
                android:id="@+id/edt_name"
                android:layout_marginBottom="11dp"  />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtphone"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:hint="@string/txt_phone"
                android:background="@drawable/round_rect_shape"
                android:layout_marginBottom="10dp"
                android:inputType="phone" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:gravity="top"
                android:hint="@string/text_description"
                android:background="@drawable/round_rect_shape"
                android:inputType="textMultiLine"
                android:id="@+id/edt_text"
                android:layout_marginBottom="11dp"  />


            <Button
                android:text="@string/txt_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_send"
                android:textColor="@android:color/white"
                android:background="@drawable/round_darkgreen_rect_shape"
                android:textAllCaps="false"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateTint="@color/colorAccent" />
</RelativeLayout>